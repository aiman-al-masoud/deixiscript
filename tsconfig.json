{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es2015",
      "lib": [
        "ES2021.String"
      ],
      "moduleResolution": "node",
      "esModuleInterop" : true,
      "sourceMap": true,                     /* Generates corresponding '.map' file. */
      "strict": true,
      "jsx":"react"
    },

    "include": [
      "app/**/*", "app/src/types",
    ]
}
